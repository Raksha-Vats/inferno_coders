<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inferno Coders</title>
    <link rel="stylesheet" href="/style/style.css">
</head>

<body>
    <div class="nav">

        <ul>
            <li class="linav"> <a class="navb" href="register.html">Register</a></li>
            <li class="linav"> <a class="navb" href="aboutus.html">About Us</a></li>
            <!-- <li class="linav"><a class="navb" href="contact.html">Contact</a></li> -->
            <li class="linav"><a class="navb" href="/">Home</a></li>
        </ul>
    </div>

    <div class="logo_and_name">
        <div class="logodiv">
            <img id="logodep" src="/images/codeforces_logo.webp" alt="logo">
        </div>
        <div class="namediv">
            <h1 id="name">Codeforces</h1>
        </div>
    </div>
    <br>
    <div class="plateformdiv">
        <button class="platforms"><a href="/codeforces.html">Codeforces</a></button>
        <button class="platforms"><a href="/leetcode.html">Leetcode</a></button>
        <button class="platforms"><a href="/codechef.html">Codechef</a></button>
    </div>
    <br>

    <div class="searchbar">
        <form action="codeforces/search" method="get">
            <input type="text" name="rollno" id="rollno" placeholder="Enter Rollno" required>
            <input type="submit" value="Get Rating" />
        </form>
    </div>

    <br>




    <div class="ranktable">
        <table>
            <tr>
                <td>Roll no</td>
                <td>Username</td>
                <td>Rating</td>
                <td>Profile link</td>
            </tr>
            <% data.forEach(student=>{ %> <tr>
                    <td>
                        <%= student.rollno %>
                    </td>
                    <td>
                        <%= student.codeforces_username %>
                    </td>
                    <td>
                        <%= student.rating %>
                    </td>
                    <td>
                        <a href="https://codeforces.com/profile/<%= student.codeforces_username %>">Profile</a>
                    </td>
                </tr>
                <% }) %>
        </table>

    </div>
    <style>
        body {
            text-align: center;
        }

        table,
        td,
        th {
            border: 2px solid white;
            border-radius: 5%;
            padding: 10px 10px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            text-align: center;
            font-size: 20px;

        }

        th {
            height: 10px;
            background-color: #adb4b2;
            color: white;
        }

        tr {
            height: 30px;
        }

        .ranktable {
            margin-top: 20px;
            background-color: #a29d9d;
            border-radius: 10px 10px 10px 10px;
            margin-left: 30px;
            margin-right: 30px;
            padding: 10px 10px;
        }
    </style>

</body>

</html>
